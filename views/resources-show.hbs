{{#if resource}}


<main class="container">
  <button id="voteUp">Like</button>
  <button id="voteDown">Dislike</button>
    <h2>{{resource.name}}</h2>
    <p>{{resource.subject}}</p>
    <p>{{resource.type}}</p>
    <p>{{resource.videos}}</p>
    <p>{{resource.exercises}}</p>
    <p>{{resource.votes}}</p>

{{else}}
    <h2>Couldn't find resource page.</h2>
{{/if}}
</main>

<form action="/resources/{{resource.name}}?_method=put" method="post">
  <input type="input" name="resource[name]" placeholder="Name" value="{{resource.name}}">
  <input type="input" name="resource[subject]" placeholder="Subject" value="{{resource.subject}}">
  <input type="input" name="resource[type]" placeholder="Lesson, Article, Lecture, Documentation, Podcast, etc" value="{{resource.type}}">
  <input type="input" name="resource[videos]" placeholder="Videos? (Yes/No)" value="{{resource.videos}}">
  <input type="input" name="resource[exercises]" placeholder="Exercises? (Yes/No)" value="{{resource.exercises}}">

  <input type="submit" value="Edit Submission">
</form>


<form action="/resources/{{resource.name}}?_method=delete" method="post">
  <input type="submit" value="Remove">
</form>
